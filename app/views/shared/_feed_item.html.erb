<div class="bs-component">
  <%= link_to feed_item.user.name, feed_item.user %>が
  <%= time_ago_in_words(feed_item.created_at) %>前に投稿
  <% if current_user?(feed_item.user) %>
    <%= link_to "削除", feed_item, method: :delete,
                         data: { confirm: "よろしいですか?" },
                         title: feed_item.content %>
      
  <% end %>
    <p><%=  simple_format(markdown(feed_item.content)) %></p>
</div>
